---
import NavBar from '../components/NavBar.astro';
import Footer from '../components/Footer.astro';
import { ViewTransitions } from 'astro:transitions';
import { SEOMetadata } from 'astro-seo-metadata';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" >
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
		<link rel="manifest" href="/site.webmanifest">
		<link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
		<meta name="msapplication-TileColor" content="#da532c">
		<meta name="theme-color" content="#000000">

		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<SEOMetadata
			siteName={'Manfred Roovers'}
			title={title}
			description={'Music producer and media composer specializing in crafting unique music for moving images. Located in Arnhem.'}
			image={'https://manfredroovers.nl/hero-og.jpg'}
			favicon={'/android-chrome-192x192.png'}
			author="Manfred Roovers"
			copyright="ISC"
			astroSitemap={true}
			canonicalUrl={'https://manfredroovers.nl'}
			type={'website'}
			astroGenerator={true}
		/>
		<ViewTransitions />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Atkinson+Hyperlegible:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet">
	</head>
	<body class="bg-black text-slate-50">
		<NavBar />
		<div class="min-h-[75dvh]">
			<slot />
		</div>
		<Footer />

		<script data-goatcounter="https://manfredroovers.goatcounter.com/count"
        async src="//gc.zgo.at/count.js"></script>
	</body>
</html>

<style is:global>
</style>
